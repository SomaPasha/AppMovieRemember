<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.circularreveal.CircularRevealFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true"
    android:focusable="true"
    >

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="20dp"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/image_movie_image_view"
                        tools:src="@drawable/stacked_navigation_bar"
                        android:layout_width="120dp"
                        android:layout_height="200dp" >

                    </ImageView>
                    <ImageView
                        android:id="@+id/is_love_movie_image_view"
                        tools:src="@drawable/stacked_navigation_bar"
                        android:layout_width="10dp"
                        android:layout_gravity="end"
                        android:layout_height="10dp" />
                </FrameLayout>

                <TextView
                    android:id="@+id/name_movie_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Duna"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/year_movie_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="2020"/>
                    <ImageView
                        android:id="@+id/star_movie_image_view"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="5dp"
                        android:src = "@drawable/stacked_navigation_bar"
                        />
                    <TextView
                        android:id="@+id/ratings_movie_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="6.9"
                        />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>


    </com.google.android.material.card.MaterialCardView>
</com.google.android.material.circularreveal.CircularRevealFrameLayout>